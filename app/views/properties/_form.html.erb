<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :物件名 %><br>
  <%= f.text_field :property_name %><br>
  <%= f.label :賃料 %><br>
  <%= f.text_field :rent %><br>
  <%= f.label :住所 %><br>
  <%= f.text_field :address %><br>
  <%= f.label :築年数 %><br>
  <%= f.text_field :age %><br>
  <%= f.label :備考欄 %><br>
  <%= f.text_area :note %><br>


  <hr>

  <%= f.fields_for :nearest_stations do |nearest_station| %>
    <h4>
      最寄り駅
      <%= nearest_station.index + 1 %>
    </h4>
    <%= nearest_station.label :路線名 %><br>
    <%= nearest_station.text_field :route_name %><br>
    <%= nearest_station.label :駅名 %><br>
    <%= nearest_station.text_field :station_name %><br>
    <%= nearest_station.label :徒歩分数 %><br>
    <%= nearest_station.text_field :time %><br>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
